<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <View
            android:background="@color/greenTemplate"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
    <View
            android:id="@+id/view2"
            android:background="@color/greenTemplate"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/view2"
            android:layout_width="80dp"
            android:id="@+id/foto_perusahaan"
            android:src="@drawable/avatar"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:civ_border_width="3dp"
            app:civ_border_color="#FFF"/>
    <LinearLayout
            android:id="@+id/layout_detailjob_2"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/foto_perusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/posisi"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#338BCF"
                android:text="Posisi kerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/nama_perusahaan"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="Nama Perusahaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/lokasi"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text="lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text=" | "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/waktu_bekerja"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text="full time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/gaji"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/greenTemplate"
                android:text="4.000.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
            android:layout_marginTop="5dp"
            android:layout_below="@id/layout_detailjob_2"
            android:id="@+id/view3"
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


    <LinearLayout
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_below="@id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/deskripsi"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:text="bgbsbguhtrghidfhdfhdhf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#F5F4F4">
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/btn_save_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/fav"
                    android:src="@mipmap/ic_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/sendEmailBtn"
                android:gravity="center"
                android:layout_weight="3"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:text="Apply Job With Send Email"
                android:background="@drawable/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="48dp"/>
    </LinearLayout>


</RelativeLayout>